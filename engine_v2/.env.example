# =================================
# TUCENTROPDF ENGINE V2 CONFIG
# =================================

# Core Settings
ENGINE_SECRET=your-super-secret-engine-key-here-change-in-production
PORT=8080
ENVIRONMENT=development

# AI/OCR Settings
AI_PROVIDER=openai
AI_MODEL=gpt-4.1-mini
OPENAI_API_KEY=your-openai-api-key-here
AI_OCR_ENABLED=true

# OCR Classic
OCR_PROVIDER=tesseract
OCR_LANGUAGES=eng,spa,por,fra
PADDLE_OCR_ENABLED=true
TESSERACT_PATH=/usr/bin/tesseract

# Office Conversion
OFFICE_ENABLED=true
OFFICE_PROVIDER=libreoffice
LIBREOFFICE_PATH=/usr/bin/libreoffice
GOTENBERG_URL=http://localhost:3000

# Plan Limits (MB)
MAX_FILE_FREE_MB=5
MAX_FILE_PREMIUM_MB=50
MAX_FILE_PRO_MB=200

# Plan Limits (Pages)
MAX_PAGES_FREE=10
MAX_PAGES_PREMIUM=100
MAX_PAGES_PRO=500

# AI OCR Limits (Pages)
AI_OCR_FREE=0
AI_OCR_PREMIUM=3
AI_OCR_PRO=20

# Rate Limiting (requests/hour)
RATE_LIMIT_FREE=10
RATE_LIMIT_PREMIUM=100
RATE_LIMIT_PRO=500

# Storage
TEMP_DIR=/tmp/tucentropdf-v2
CLEANUP_INTERVAL=300
MAX_TEMP_AGE=3600
MAX_STORAGE_SIZE=10GB

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Redis (opcional para rate limiting y colas)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
MAX_REQUEST_SIZE=250MB
ALLOWED_ORIGINS=*
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090